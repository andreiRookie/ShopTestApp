<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/logging_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/title_logging"
        style="@style/titles_text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <include-->
    <!--        android:id="@+id/name_edittext"-->
    <!--        layout="@layout/logging_edit_text_layout"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/logging_title"-->
    <!--        -->
    <!--    />-->
    <EditText
        android:id="@+id/name_edittext"
        style="@style/logging_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_name"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintBottom_toTopOf="@id/surname_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logging_title" />

    <ImageButton
        android:id="@+id/name_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear_edit_text_style_selector"
        app:layout_constraintTop_toTopOf="@id/name_edittext"
        app:layout_constraintBottom_toBottomOf="@id/name_edittext"
        app:layout_constraintEnd_toEndOf="@id/name_edittext"/>

    <EditText
        android:id="@+id/surname_edittext"
        style="@style/logging_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_surname"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintBottom_toTopOf="@id/phone_number_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_edittext" />

    <ImageButton
        android:id="@+id/surname_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear_edit_text_style_selector"
        app:layout_constraintTop_toTopOf="@id/surname_edittext"
        app:layout_constraintBottom_toBottomOf="@id/surname_edittext"
        app:layout_constraintEnd_toEndOf="@id/surname_edittext"/>

    <EditText
        android:id="@+id/phone_number_edittext"
        style="@style/logging_edit_text_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="6dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center_vertical"
        android:hint="@string/hint_phone_number"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/logging_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname_edittext" />

    <ImageButton
        android:id="@+id/phone_number_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clear_edit_text_style_selector"
        app:layout_constraintTop_toTopOf="@id/phone_number_edittext"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_edittext"
        app:layout_constraintEnd_toEndOf="@id/phone_number_edittext"/>

    <Button
        android:id="@+id/logging_button"
        style="@style/logging_button_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="@string/to_log_in"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/disclaimer_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_number_edittext" />

    <TextView
        android:id="@+id/disclaimer_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer_first_text"
        style="@style/disclaimer_text_style"
        app:layout_constraintBottom_toTopOf="@id/disclaimer_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/disclaimer_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer_second_text"
        style="@style/disclaimer_text_style"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>