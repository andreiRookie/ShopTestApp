<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titles_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">inter_medium"</item>
    </style>
    
    <style name="logging_edit_text_style">
        <item name="android:fontFamily">inter-medium</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/logging_edit_text_shape</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="logging_button_style">
        <item name="android:background">@drawable/logging_button_style_selector</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">inter-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottom_nav_style">
        <item name="fontFamily">inter_regular</item>
        <item name="itemTextAppearanceActive">@style/bottom_nav_text_style</item>
        <item name="itemTextAppearanceInactive">@style/bottom_nav_text_style</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector</item>
    </style>
    <style name="bottom_nav_text_style">
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="disclaimer_text_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">inter_regular"</item>
    </style>

</resources>